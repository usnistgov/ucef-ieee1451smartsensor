<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>IEEE1451SmartSensorTester-impl-java</artifactId>
    <groupId>org.webgme.guest</groupId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>IEEE1451SmartSensorTester</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${package.name}.${federate.name}</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.19.1</version>
        <configuration>
          <forkMode>once</forkMode>
          <argLine>-Djava.library.path=${project.basedir}/target/nar/processid-${cpswt.version}-amd64-Linux-gpp-jni/lib/amd64-Linux-gpp/jni/</argLine>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <copy>
                  <fileset />
                </copy>
                <copy>
                  <fileset />
                </copy>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>${federate.name}</id>
    </profile>
    <profile>
      <id>JavaFed</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.5.0</version>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <systemProperties>
                <systemProperty>
                  <key>java.net.preferIPv4Stack</key>
                  <value>true</value>
                </systemProperty>
              </systemProperties>
              <classpathScope>runtime</classpathScope>
              <mainClass>${package.name}.${federate.name}</mainClass>
              <arguments>
                <argument>-configFile</argument>
                <argument>${configFile}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <federation.version>0.1.0-SNAPSHOT</federation.version>
    <federation.name>IEEE1451SmartSensorTester</federation.name>
    <cpswt.version>0.6.0-SNAPSHOT</cpswt.version>
    <package.name>IEEE1451SmartSensorTester</package.name>
    <federate.name>IEEE1451SmartSensorTester</federate.name>
    <configFile>IEEE1451SmartSensorTesterConfig.json</configFile>
    <nar.version>3.3.0</nar.version>
  </properties>
</project>

